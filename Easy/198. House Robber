class Solution {
    public static int fn(int ind,int[] arr){
        if(ind==0){
            return arr[ind];
        }
        if(ind<0){
            return 0;
        }

        int pick= arr[ind]+ fn(ind-2,arr);
        int notpick= 0+ fn(ind-1,arr);

        return Math.max(pick,notpick);

    }
    public int rob(int[] nums) {
        int n=nums.length;
        return fn(n-1,nums);
    }
}
//-------------------------------------
class Solution {
    public static int fn(int ind,int[] arr,int[] dp){
        if(ind==0) return arr[0];
        if(ind<0) return 0;

        if(dp[ind]!=-1) return dp[ind];

        int pick=fn(ind-1,arr,dp);
        int notpick=fn(ind-2,arr,dp)+arr[ind];

        return dp[ind]=Math.max(pick,notpick);

    }
    public int rob(int[] nums) {
        int n=nums.length;
        int[] dp=new int[n+1];
        Arrays.fill(dp,-1);
        return fn(n-1,nums,dp);
    }
}
